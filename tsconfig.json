      "target": "es6",
      "lib": [ "es2017", "dom", "ESNext" ],
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "allowSyntheticDefaultImports": true,
    },
